<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="Tests/bootstrap.php"
    beStrictAboutTestsThatDoNotTestAnything="true"
    checkForUnintentionallyCoveredCode="false"
    beStrictAboutOutputDuringTests="true"
    beStrictAboutTestSize="true"
    colors="true"
>
    <php>
        <const name="AWFTEST_DATABASE_MYSQL_DSN" value="host=localhost;dbname=awf;user=utuser;pass=ut1234" />
        <const name="AWFTEST_DATABASE_MYSQL_ALTDB" value="awf_alt" />
        <const name="AWFTEST_DATABASE_MYSQLI_DSN" value="host=localhost;dbname=awf;user=utuser;pass=ut1234" />
        <const name="AWFTEST_DATABASE_MYSQLI_ALTDB" value="awf_alt" />
        <const name="AWFTEST_DATABASE_POSTGRESQL_DSN" value="host=localhost;port=5432;dbname=awf;user=utuser;pass=ut1234" />
        <const name="AWFTEST_DATABASE_POSTGRESQL_ALTDB" value="awf_alt" />
        <const name="AWFTEST_DATABASE_SQLSRV_DSN" value="host=localhost;dbname=awf;user=utuser;pass=ut1234" />
        <const name="AWFTEST_DATABASE_SQLSRV_ALTDB" value="awf_alt" />
    </php>

	<testsuites>
		<testsuite name="AWF Unit Tests">
			<directory>Tests</directory>
		</testsuite>
	</testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">Awf</directory>
            <exclude>
                <directory suffix=".php">Awf/Autoloader</directory>
                <directory suffix=".php">Awf/Compat</directory>
                <directory suffix=".php">Awf/Mailer/phpmailer</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
